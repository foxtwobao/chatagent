# 火山引擎API配置
VOLCANO_ACCESS_KEY=your_volcano_access_key_here

# 语音合成配置
VOICE_APP_ID=your_voice_app_id_here
VOICE_ACCESS_TOKEN=your_voice_access_token_here
TTS_SPEECH_RATE=0
TTS_VOICE_TYPE=S_dQcSOODF1
TTS_RESOURCE_ID=volc.megatts.default

# ASR语音识别配置
ASR_APP_ID=your_asr_app_id_here
ASR_ACCESS_TOKEN=your_asr_access_token_here
ASR_SUBMIT_URL=https://openspeech.bytedance.com/api/v3/auc/bigmodel/submit
ASR_QUERY_URL=https://openspeech.bytedance.com/api/v3/auc/bigmodel/query
ASR_RESOURCE_ID=volc.bigasr.auc
ASR_MODEL_NAME=bigmodel
ASR_MODEL_VERSION=400
ASR_SAMPLE_RATE=16000
ASR_LANGUAGE=
ASR_MAX_DURATION=60
ASR_ENABLE_ITN=true
ASR_ENABLE_PUNC=false
ASR_ENABLE_DDC=false
ASR_PUBLIC_BASE_URL=
ASR_KEEP_UPLOADS=false

# 飞书Aily配置
FEISHU_APP_ID=your_feishu_app_id_here
FEISHU_APP_SECRET=your_feishu_app_secret_here
SKILL_APP_ID=your_skill_app_id_here
SKILL_ID=your_skill_id_here
FEISHU_OPEN_API_BASE=https://open.feishu.cn
FEISHU_POLLING_INTERVAL=0.3
FEISHU_MAX_POLLING_TIME=60

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# DeepSeek模型配置
DEEPSEEK_MODEL=deepseek-v3-1-terminus
DEEPSEEK_API_URL=https://ark.cn-beijing.volces.com/api/v3/chat/completions

# 默认参数配置
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=2048

# LLM提供商配置 (feishu_aily 或 volcano)
LLM_PROVIDER=feishu_aily

# 调试模式
DEBUG=false